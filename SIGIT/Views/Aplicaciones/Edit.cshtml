@model SIGIT.Models.Aplicacione

@{
    Layout = null; // Necesario para vista parcial
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AplicacionId" />
            <div class="form-group">
                <label asp-for="NombreAplicacion" class="control-label"></label>
                <input asp-for="NombreAplicacion" class="form-control" required />
                <span asp-validation-for="NombreAplicacion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success"><i class="bi bi-floppy-fill"></i></button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"><i class="bi bi-house-x-fill"></i></button>
            </div>
        </form>
    </div>
</div>
