@model IEnumerable<SIGIT.Models.UsuariosSistema>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios del sistema</h1>

<p>
    <a class="btn btn-outline-success btn-lg" asp-action="Create" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Create")" data-title="Crear Usuario">Crear Usuario</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                Nombre Completo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioLogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @{
                        var partes = new[] { item.Nombre, item.SegundoNombre, item.Apellido, item.SegundoApellido };
                        @string.Join(" ", partes.Where(s => !string.IsNullOrWhiteSpace(s)))
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioLogin)
                </td>
                <td>
                    <span>****</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.NombreRol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    <a class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Edit", new { id = item.UsuarioSistemaId })" data-title="Editar Usuario"><i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Details", new { id = item.UsuarioSistemaId })" data-title="Detalles Usuario"><i class="bi bi-ui-checks"></i></a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.UsuarioSistemaId"><i class="bi bi-x-square-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="genericModal" tabindex="-1" aria-labelledby="genericModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="genericModalLabel">Cargando...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Carga los scripts de validación
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {

            // Cargar contenido en el modal al ABRIR
            $('#genericModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var url = button.data('url');
                var title = button.data('title');

                var modal = $(this);
                modal.find('.modal-title').text(title || 'Cargando...');
                modal.find('.modal-body').html('<div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Cargando...</span></div></div>');

                if (url) {
                    $.get(url).done(function (data) {
                        modal.find('.modal-body').html(data);

                        // Activar la validación en el formulario cargado
                        var newForm = modal.find('form');
                        $.validator.unobtrusive.parse(newForm);
                    });
                }
            });

            // Enviar el formulario del modal al hacer SUBMIT
            $('#genericModal').on('submit', 'form', function (e) {
                e.preventDefault();

                var form = $(this);

                // Validar antes de enviar
                if (!form.valid()) {
                    return;
                }

                var url = form.attr('action');
                var formData = form.serialize();

                $.post(url, formData).done(function (response) {
                    // SI TIENE ÉXITO (El controlador devuelve JSON)
                    if (typeof response === 'object' && response.success === true) {
                        $('#genericModal').modal('hide');
                        location.reload();
                    }
                    // SI FALLA LA VALIDACIÓN (El controlador devuelve la PartialView)
                    else {
                        $('#genericModal').find('.modal-body').html(response);
                        $.validator.unobtrusive.parse($('#genericModal').find('form'));
                    }
                }).fail(function (xhr, status, error) {
                    alert('Error fatal al procesar la solicitud: ' + error);
                });
            });

            // Limpiar el modal al CERRAR
            $('#genericModal').on('hidden.bs.modal', function () {
                var modal = $(this);
                modal.find('.modal-body').html('<div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Cargando...</span></div></div>');
                modal.find('.modal-title').text('Cargando...');
            });
        });
    </script>
}