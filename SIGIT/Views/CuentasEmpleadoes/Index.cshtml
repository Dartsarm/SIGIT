@model IEnumerable<SIGIT.Models.CuentasEmpleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios y Cuentas</h1>

@if (User.IsInRole("Administrador") || User.IsInRole("Técnico"))
{
    <p>
        <a class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Create", "CuentasEmpleadoes")" data-title="Generar cuentas">Crear Cuenta</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aplicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrasena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimaModificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.Nombre) @Html.DisplayFor(modelItem => item.Empleado.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aplicacion.NombreAplicacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Contrasena))
                    {
                        <span>****@item.Contrasena.Substring(Math.Max(0, item.Contrasena.Length - 3))</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimaModificacion)
                </td>
                <td>
                    @if (User.IsInRole("Administrador") || User.IsInRole("Técnico"))
                    {
                        <a class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Edit", "CuentasEmpleadoes", new { id = item.CuentaId })" data-title="Editar Cuentas">Editar</a>
                        <span>|</span>
                    }

                    <a class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Details", "CuentasEmpleadoes", new { id = item.CuentaId })" data-title="Detalles cuentas">Detalles</a>

                    @if (User.IsInRole("Administrador"))
                    {
                        <span>|</span>
                        <a class="btn btn-outline-danger"
                           data-bs-toggle="modal"
                           data-bs-target="#genericModal"
                           data-url="@Url.Action("Delete", "CuentasEmpleadoes", new { id = item.CuentaId })"
                           data-title="Eliminar Cuenta">
                            Eliminar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="genericModal" tabindex="-1" aria-labelledby="genericModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="genericModalLabel">Cargando...</h5>
                <button type.button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            // 1. Cargar contenido
            $('#genericModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var url = button.data('url');
                var title = button.data('title');
                var modal = $(this);
                modal.find('.modal-title').text(title || 'Cargando...');
                modal.find('.modal-body').html('<div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Cargando...</span></div></div>');

                if (url) {
                    $.get(url).done(function (data) {
                        modal.find('.modal-body').html(data);
                        var newForm = modal.find('form');
                        $.validator.unobtrusive.parse(newForm);
                    }).fail(function () {
                        // AÑADIDO: Si la URL falla (ej. 404), muestra un error
                        modal.find('.modal-body').html('<p class="text-danger">Error al cargar el contenido.</p>');
                    });
                }
            });

            // 2. Enviar formulario
            $('#genericModal').on('submit', 'form', function (e) {
                e.preventDefault();
                var form = $(this);
                if (!form.valid()) { return; }
                var url = form.attr('action');
                var formData = form.serialize();

                $.post(url, formData).done(function (response) {
                    if (typeof response === 'object' && response.success === true) {
                        $('#genericModal').modal('hide');
                        location.reload();
                    }
                    else {
                        $('#genericModal').find('.modal-body').html(response);
                        $.validator.unobtrusive.parse($('#genericModal').find('form'));
                    }
                }).fail(function (xhr, status, error) {
                    alert('Error fatal: ' + error);
                });
            });

            // 3. Limpiar al cerrar
            $('#genericModal').on('hidden.bs.modal', function () {
                var modal = $(this);
                modal.find('.modal-body').html('<div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Cargando...</span></div></div>');
                modal.find('.modal-title').text('Cargando...');
            });
        });
    </script>
}