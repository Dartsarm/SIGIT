@model SIGIT.Models.Compania

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompaniaId" />
            <div class="form-group">
                <label asp-for="NombreCompania" class="control-label"></label>
                <input asp-for="NombreCompania" class="form-control" />
                <span asp-validation-for="NombreCompania" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" /> |
                <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
