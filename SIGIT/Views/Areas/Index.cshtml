@model IEnumerable<SIGIT.Models.Area>

@{
    ViewData["Title"] = "Index";
}

<h1>Áreas</h1>

<p>
    <a class="btn btn-outline-success btn-lg" asp-action="Create" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Create")" data-title="nueva area">
        <i class="bi bi-briefcase"></i></a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreArea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArea)
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Details", new { id = item.AreaId })" data-title="Detalles Área"><i class="bi bi-ui-checks"></i></a>
                    <a class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Edit", new { id = item.AreaId })" data-title="Editar Área"><i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#genericModal" data-url="@Url.Action("Delete", new { id = item.AreaId })" data-title="Eliminar área"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            $('#genericModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Botón que dispara el modal
                var url = button.data('url');      // URL para cargar el contenido
                var title = button.data('title');  // Extrae el título del atributo data-title

                var modal = $(this);
                modal.find('.modal-title').text(title || 'Cargando...'); // Usa el título o un valor por defecto
                modal.find('.modal-body').html('Cargando...');

                if (url) {
                    $.get(url).done(function (data) {
                        modal.find('.modal-body').html(data);
                    });
                }
            });

            $('#genericModal').on('hidden.bs.modal', function () {
                var modal = $(this);
                modal.find('.modal-body').html('Cargando...');
                modal.find('.modal-title').text('Cargando...');
            });

            // Manejar la sumisión del formulario dentro del modal
            $('#genericModal').on('submit', 'form', function (e) {
                e.preventDefault();

                var form = $(this);
                var url = form.attr('action');
                var formData = form.serialize();

                $.post(url, formData).done(function (response) {
                    // Si la respuesta es una vista parcial (contiene formulario o summary de validación)
                    if (typeof response === 'string' && (response.indexOf('<form') >= 0 || response.indexOf('validation-summary-valid') >= 0)) {
                        form.replaceWith(response);
                        $.validator.unobtrusive.parse(form); // Re-parsear validaciones
                    } else if (typeof response === 'object' && response.success === true) {
                        // Si la respuesta es JSON con success: true
                        $('#genericModal').modal('hide');
                        location.reload();
                    } else {
                        // Considerar cualquier otra respuesta como éxito y cerrar/recargar
                        $('#genericModal').modal('hide');
                        location.reload();
                    }
                }).fail(function (xhr, status, error) {
                    alert('Error al procesar la solicitud: ' + error);
                });
            });
        });
    </script>
}