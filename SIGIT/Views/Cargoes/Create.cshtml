@model SIGIT.Models.Cargo

@{
    Layout = null; // ¡Importante! No usar el _Layout principal
}

<h1>Crear Cargo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCargo" class="control-label"></label>
                <input asp-for="NombreCargo" class="form-control" />
                <span asp-validation-for="NombreCargo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" /> | 
                <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>
