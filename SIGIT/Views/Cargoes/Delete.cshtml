@model SIGIT.Models.Cargo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Cargo</h1>

<h3 class="text-danger">¿Esta seguro que quiere eliminar este cargo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCargo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoId" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
    </form>
</div>
